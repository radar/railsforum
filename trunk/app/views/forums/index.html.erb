<table cellspacing='0' cellpadding='2' class='forums' width='100%' rules='groups'>
  <% unless @forums.empty? %>
    <thead>
      <tr>
        <td align='left' width='40%'><b>Forum</b></td>
        <td align='center' width='100px'><b>Topics</b></td>
        <td align='center' width='100px'><b>Posts</b></td>
        <td align='right'><b>Last Post</b></td>
      </tr>
    </thead>
  
    <% for forum in @forums %>
      <tbody>
        <tr><td align='left'><h1><%= link_to(forum.title, forum_path(forum.id)) %></h1><%= forum.description %></td>
        <td align='center'><%= forum.topics.size %></td>
        <td align='center'><%= forum.posts.size %></td>
        <td align='right'><% if !forum.topics.empty? %>
            <%= time_ago_in_words(forum.last_post.created_at) %> ago
            by <%= link_to(forum.last_post.user.login, :controller => "accounts", :action => "user", :id => forum.last_post.user.login)  %>
            in <%= link_to(forum.topics.last.subject, forum_topic_path(forum,forum.topics.last)) %>
          <% else %>
            None
          <% end %>
        </td>
      </tbody>
  
  
    <% end %>
  <% else %>
    <thead>
      <tr><td colspan='5' align='center'><b>There are no forums. <% unless is_admin? %>Maybe an administrator should create one.<% else %><%= link_to "Maybe you should create a forum.", new_admin_forum_path %><% end %></b></td>
    </thead>
  <% end %>
  
  <tfoot>
  </tfoot>
</table><br>
<% if logged_in? %>
  <table cellspacing='0' cellpadding='5' class='info-box' width='100%'>
    <thead>
      <tr><td>Forum Statistics</td></tr>
    </thead>
    <tbody>
      <tr><td>
          <span class='right'>
            <b>Posts: </b><%= @posts %><br>
            <b>Topics: </b><%= @topics %><br>
            <b>Posts/Topic: </b><%= @ppt %><br>
          </span>
          <b>Registered users:</b> <%= @users %> <br>
          <b>Users on in the last 15 minutes:</b> <%= @lusers.blank? ? "None" : @lusers %>
      </td></tr>
    </tbody>
  </table>
<% end %>
